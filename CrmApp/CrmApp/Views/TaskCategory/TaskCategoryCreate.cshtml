@model TaskCategoryCreateViewModel


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <h5>İş Kategori Tanımı</h5>
                <hr />

                <form asp-controller="TaskCategory" asp-action="TaskCategoryCreate">
                    @if (TempData["messageError"] != null)
                    {
                        <div class="alert alert-icon alert-danger" role="alert">
                            @TempData["messageError"]
                        </div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">İş Kategorisi Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Oluştur" class="btn btn-secondary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="TaskCategoryList" class="btn btn-info">İş Kategori Listesi</a>
        </div>
    </div>
</div>

