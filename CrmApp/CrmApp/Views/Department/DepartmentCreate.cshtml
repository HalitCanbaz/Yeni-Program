@model DepartmentCreateViewModel


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <h5>Departman Tanımı</h5>
                <hr />

                <form asp-controller="Department" asp-action="DepartmentCreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Departman Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>                   
                    <div class="form-group">
                        <input type="submit" value="Oluştur" class="btn btn-secondary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="DepartmentList" class="btn btn-info">Departman Listesi</a>
        </div>
    </div>
</div>

