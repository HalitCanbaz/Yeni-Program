@model UserEditViewModel
@{
    ViewData["Title"] = "UserEdit";
}



<form asp-controller="User" asp-action="UserEdit" method="post" enctype="multipart/form-data">

    @if (TempData["message"] != null)
    {
        @TempData["message"]
    }


    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>



    <div class="row mb-3">
        <label for="UserName" class="col-sm-2 col-form-label" asp-for="UserName"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control">
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="NameSurname" class="col-sm-2 col-form-label" asp-for="NameSurname"></label>
        <div class="col-sm-10">
            <input asp-for="NameSurname" class="form-control">
            <span class="text-danger" asp-validation-for="NameSurname"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="DepartmanId " class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-select js-select2" data-search="on" asp-for="DepartmanId" class="form-control" asp-items="ViewBag.DepartmanId"></select>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Email" class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Phone" class="col-sm-2 col-form-label" asp-for="Phone"></label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control">
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label for="Picture" class="col-sm-2 col-form-label" asp-for="Picture"></label>
        <div class="col-sm-10">            
                <input type="file" asp-for="Picture" class="form-control">
                <span class="text-danger" asp-validation-for="Picture"></span>        
        </div>
    </div>
    <div class="row mb-3">
        <label for="Description" class="col-sm-2 col-form-label" asp-for="Description"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>

</form>


