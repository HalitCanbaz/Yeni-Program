@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = null;
}
@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<!DOCTYPE html>
<html lang="zxx" class="js">

<head>
    <base href=".~/.~/.~/">
    <meta charset="utf-8">
    <meta name="author" content="Softnio">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="A powerful and conceptual apps base dashboard template that especially build for developers and programmers.">
    @*logo gelecek*@
    <link rel="shortcut icon" href="">
    <title>Yeni Kayıt</title>
    <link rel="stylesheet" href="~/assets/css/dashlite.css?ver=3.0.0">
    <link id="skin-default" rel="stylesheet" href="~/assets/css/theme.css?ver=3.0.0">
</head>

<body class="nk-body bg-white npc-default pg-auth">
    <div class="nk-app-root">
        <div class="nk-main ">
            <div class="nk-wrap nk-wrap-nosidebar">
                <div class="nk-content ">
                    <div class="nk-block nk-block-middle nk-auth-body wide-xs">
                        <div class="brand-logo pb-4 text-center">
                            <a href="html/index.html" class="logo-link">
                                <img class="logo-light logo-img logo-img-lg" src="~/images/h5.png" srcset="~/images/h5.png 2x" alt="logo">
                                <img class="logo-dark logo-img logo-img-lg" src="~/images/h5.png" srcset="~/images/h5.png 2x" alt="logo-dark">
                            </a>
                        </div>
                        <div class="card">
                            <div class="card-inner card-inner-lg">
                                <div class="nk-block-head">
                                    <div class="nk-block-head-content">
                                        <h4 class="nk-block-title">Kayıt Ol</h4>
                                        <div class="nk-block-des">
                                            <p>Sisteme girebilmek için kullanıcınızın olması gerekiyor.</p>
                                        </div>
                                    </div>
                                </div>

                                @if (TempData["message"] != null)
                                {
                                    <div class="alert alert-icon alert-success" role="alert">
                                        @TempData["message"]
                                    </div>
                                }
                                <form asp-controller="User" asp-action="SignUp" method="post">


                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                    <div class="form-group">
                                        <label class="form-label" for="UserName" asp-for="UserName"> </label>
                                        <div class="form-control-wrap">
                                            <input asp-for="UserName" type="text" class="form-control form-control-lg" id="name" placeholder="Kullanıcı Adınızı Giriniz">
                                            <span class="text-danger" asp-validation-for="UserName"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label" for="NameSurname" asp-for="NameSurname"> </label>
                                        <div class="form-control-wrap">
                                            <input asp-for="NameSurname" type="text" class="form-control form-control-lg" id="name" placeholder="Adınızı ve Soyadınızı Giriniz">
                                            <span class="text-danger" asp-validation-for="NameSurname"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DepartmanId " class="col-sm-5 col-form-label"></label>
                                        <div class="form-control-wrap">
                                            <select class="form-select js-select2" data-search="on"  asp-for="DepartmanId" class="form-control" asp-items="ViewBag.DepartmanId"></select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="Email" asp-for="Email"> </label>
                                        <div class="form-control-wrap">
                                            <input asp-for="Email" type="text" class="form-control form-control-lg" id="name" placeholder="Mail Adresinizi Giriniz">
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="Phone" asp-for="Phone"> </label>
                                        <div class="form-control-wrap">
                                            <input asp-for="Phone" type="text" class="form-control form-control-lg" id="name" placeholder="Telefonunuzu Giriniz">
                                            <span class="text-danger" asp-validation-for="Phone"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="password" asp-for="Password"> </label>
                                        <div class="form-control-wrap">
                                            <a href="#" class="form-icon form-icon-right passcode-switch lg" data-target="password">
                                                <em class="passcode-icon icon-show icon ni ni-eye"></em>
                                                <em class="passcode-icon icon-hide icon ni ni-eye-off"></em>
                                            </a>
                                            <input asp-for="Password" type="password" class="form-control form-control-lg" id="password" placeholder="Şifrenizi Giriniz">
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="PasswordConfirm" asp-for="PasswordConfirm"> </label>
                                        <div class="form-control-wrap">
                                            <a href="#" class="form-icon form-icon-right passcode-switch lg" data-target="PasswordConfirm">
                                                <em class="passcode-icon icon-show icon ni ni-eye"></em>
                                                <em class="passcode-icon icon-hide icon ni ni-eye-off"></em>
                                            </a>
                                            <input asp-for="PasswordConfirm" type="password" class="form-control form-control-lg" id="PasswordConfirm" placeholder="Şifrenizi Giriniz">
                                            <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <button type="submit" class="btn btn-block btn-secondary">Kayıt Ol</button>
                                    </div>
                                </form>
                                <div class="form-note-s2 text-center pt-4">
                                    Kullanıcın var mı ?   <a asp-controller="User" asp-action="SignIn" class="text-blue"><strong>Kullanıcı Girişi</strong></a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/js/bundle.js?ver=3.0.0"></script>
    <script src="~/assets/js/scripts.js?ver=3.0.0"></script>
</body>
</html>

