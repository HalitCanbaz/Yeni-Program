@model AssetCreateViewModel


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        }

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <h5>Varlık Oluştur</h5>
                <hr />

                <form asp-controller="Asset" asp-action="AssetCreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Code" class="control-label">Varlik Kodu</label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Varlik Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SerialNo" class="control-label">Seri No</label>
                        <input asp-for="SerialNo" class="form-control" />
                        <span asp-validation-for="SerialNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Varlik Açıklaması</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AppUserId" class="control-label">Varlik Sahibi</label>
                        <select asp-for="AppUserId" class="form-select js-select2" data-search="on" asp-items="ViewBag.AppUserId"></select>
                        <span asp-validation-for="AppUserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AssetCategoryId" class="control-label">Varlık Kategorisi</label>
                        <select asp-for="AssetCategoryId" class="form-select js-select2" data-search="on" asp-items="ViewBag.AssetCategoryId"></select>
                        <span asp-validation-for="AssetCategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AssetTypeId" class="control-label">Varlik Tipi</label>
                        <select asp-for="AssetTypeId" class="form-select js-select2" data-search="on" asp-items="ViewBag.AssetTypeId"></select>
                        <span asp-validation-for="AssetTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Oluştur" class="btn btn-secondary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="AssetList" class="btn btn-info">Varlık Listesine Dön</a>
        </div>
    </div>
</div>

